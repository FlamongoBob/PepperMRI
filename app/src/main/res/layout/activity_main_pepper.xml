    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPepper_cl_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment_NewUser">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPepper0_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintEnd_toStartOf="@+id/clPepper2"
            app:layout_constraintHeight_percent=".05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".05">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="back"
                tools:layout_editor_absoluteX="10dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPepper1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent=".95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clPepper0_1"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".5"
            tools:context=".Fragment_NewUser">

            <ScrollView
                android:id="@+id/svQuestions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                tools:layout_editor_absoluteX="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clPepper1_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".Fragment_NewUser">

                    <TextView
                        android:id="@+id/tvQuestion1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="50dp"
                        android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextView"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioGroup
                        android:id="@+id/rgQuestion1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:minHeight="120dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvQuestion1">

                        <RadioButton
                            android:id="@+id/rbQuestion1_Yes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="60dp"
                            android:text="@string/rb_Receive"
                            tools:layout_editor_absoluteX="145dp"
                            tools:layout_editor_absoluteY="461dp" />

                        <RadioButton
                            android:id="@+id/rbQuestion1_No"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="60dp"
                            android:text="@string/rb_Not_Receive"
                            tools:layout_editor_absoluteX="277dp"
                            tools:layout_editor_absoluteY="461dp" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/tvQuestion2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="50dp"
                        android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rgQuestion1" />

                    <RadioGroup
                        android:id="@+id/rgQuestion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:minHeight="120dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvQuestion2">

                        <RadioButton
                            android:id="@+id/rbQuestion2_Yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="60dp"
                            android:text="@string/rb_Receive"
                            tools:layout_editor_absoluteX="145dp"
                            tools:layout_editor_absoluteY="461dp" />

                        <RadioButton
                            android:id="@+id/rbQuestion2_No"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="60dp"
                            android:text="@string/rb_Not_Receive"
                            tools:layout_editor_absoluteX="277dp"
                            tools:layout_editor_absoluteY="461dp" />
                    </RadioGroup>


                    <TextView
                        android:id="@+id/tvQuestion3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="50dp"
                        android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rgQuestion2" />

                    <RadioGroup
                        android:id="@+id/rgQuestion3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:minHeight="120dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvQuestion3">

                        <RadioButton
                            android:id="@+id/rbQuestion3_Yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="60dp"
                            android:text="@string/rb_Receive"
                            tools:layout_editor_absoluteX="145dp"
                            tools:layout_editor_absoluteY="461dp" />

                        <RadioButton
                            android:id="@+id/rbQuestion3_No"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="60dp"
                            android:text="@string/rb_Not_Receive"
                            tools:layout_editor_absoluteX="277dp"
                            tools:layout_editor_absoluteY="461dp" />
                    </RadioGroup>

                    <Button
                        android:id="@+id/btnDone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="back"
                        app:layout_constraintTop_toBottomOf="@+id/rgQuestion3"
                        tools:layout_editor_absoluteX="10dp" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPepper2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Fragment_NewUser">


            <ImageView
                android:id="@+id/ivEmployee"
                android:layout_width="408dp"
                android:layout_height="413dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="150dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvEmployeeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="200dp"
                android:text="tvEmployeeTitle"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/ivEmployee"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvEmployeeInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:text="tvEmployeeInfotvEmployeeInfotvEmployeeInfotvEmployeeInfotvEmployeeInfo"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivEmployee"
                app:layout_constraintTop_toBottomOf="@+id/tvEmployeeFirstName" />

            <TextView
                android:id="@+id/tvEmployeeLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="59dp"
                android:layout_marginTop="282dp"
                android:layout_marginEnd="94dp"
                android:text="tvEmployeeLastName"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvEmployeeFirstName"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvEmployeeFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:text="tvEmployeeFirstName"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/ivEmployee"
                app:layout_constraintTop_toBottomOf="@+id/tvEmployeeTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>